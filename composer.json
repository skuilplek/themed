{
    "name": "skuilplek/themed",
    "description": "A component-based theme engine for PHP applications",
    "type": "library",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Hannes Coetzee",
            "email": "1417460+skuilplek@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Skuilplek\\Themed\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Skuilplek\\Themed\\Tests\\": "tests/"
        }
    },
    "keywords": [
        "theme",
        "twig",
        "php",
        "template-engine",
        "components",
        "components-library"
    ],
    "minimum-stability": "stable"
}
